<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!-- ... outras configurações ... -->

    <!-- Configurar a página de erro padrão -->
    <error-page>
        <error-code>501</error-code> <!-- Caso der o erro 501, vai para a pagina error.jsp que eu criei -->
        <location>/erro501.jsp</location> 
    </error-page>
    
    <error-page>
        <exception-type>java.lang.NullPointerException</exception-type>
        <location>/erroNull.jsp</location> <!-- Caso der o erro Null vai para a pagina erroNull.jsp que eu criei-->
    </error-page>
    
    
</web-app>